{
  "name": "ai-research-repo",
  "version": "1.0.0",
  "description": "Automated AI research repository with synthesis and reporting capabilities",
  "main": "index.js",
  "scripts": {
    "research": "ts-node scripts/research.ts",
    "synthesize": "ts-node scripts/synthesize.ts",
    "open-pr": "ts-node scripts/open_pr.ts",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "dev": "ts-node-dev --respawn --transpile-only scripts/research.ts",
    "start": "node dist/scripts/research.js"
  },
  "keywords": [
    "ai",
    "research",
    "automation",
    "synthesis",
    "machine-learning",
    "github-actions"
  ],
  "author": "JTerr",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JTerr/ai-research-repo.git"
  },
  "bugs": {
    "url": "https://github.com/JTerr/ai-research-repo/issues"
  },
  "homepage": "https://github.com/JTerr/ai-research-repo#readme"
}
